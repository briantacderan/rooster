<html>

<head>
    <title>
        ROOSTER!
    </title>

    <link rel="stylesheet" href="https://meyerweb.com/eric/tools/css/reset/reset200802.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Slackey&display=swap" rel="stylesheet" />

    <link rel="icon" type="image/x-icon" href="../static/imgs/herodex-logo.svg" />

    <style>
        a {
            color: black;
        }

        a:hover {
            text-decoration: none;
        }

        h1,
        h2,
        h3,
        a,
        button {
            font-family: "Slackey", sans-serif;
        }
    </style>
</head>

<body>
    <div class="container my-5">
        <h3>
            <a href="/" id="title"><img src="../static/imgs/herodex-logo.svg" style="width: 10vw;" /></a> Login to <strong style="font-size: 5rem">Rooster</strong>
            <a class="btn btn-primary float-right" href="/">Go back!</a>
        </h3>
        <hr>

        <form class="form-control" enctype="multipart/form-data" method="POST" action="/login">
            <div class="col"
                style="display: flex; flex-direction: column; justify-content: center; align-items: space-around; margin: 1.5rem auto;">

                <div class="form-group" style="margin-top: 5rem;">
                    <div class="row">
                        <div class="col">
                            <label for="username"><strong>Rooster</strong> username:</label>
                            <input required type="text" placeholder="johndoe123" name="username" id="username" class="form-control" />
                            <span id="pass-indicator1" style="color: red"></span>
                        </div>
                        <div class="col">
                            <label for="password">Password:</label>
                            <input required type="text" name="password" id="password" class="form-control" onkeyup="manage(this)" />
                            <span id="pass-indicator2" style="color: red"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <p>Don't have a <strong>ROOSTER</strong> account?</p>
                                <a class="btn btn-sm" href="/register" style="color: blue">Create Account</a>
                            </div>
                        </div>
                        <div class="col">
                            <button disabled type="submit" id="btSubmit" class="btn btn-primary btn-block btn-large"
                                style="margin-left: 30%; width: 70%;">ACCESS ROOSTüóûÔ∏è
                            </button>
                        </div>
                    </div>
                </div>
                {{#if flash}}
                <div class="alert alert-danger">
                    {{flash}}
                </div>
                {{/if}}
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
        crossorigin="anonymous"></script>

    <script>
        function manage(password) {
            var bt = document.getElementById('btSubmit');
            var usr = document.getElementById('username');
            var flash1 = document.getElementById('pass-indicator1');
            var flash2 = document.getElementById('pass-indicator2');

            if ((password.value != "") && (usr.value != "")) {
                flash1.innerHTML = ""
                flash2.innerHTML = ""
                bt.disabled = false;
            } else if ((password.value == "") || (usr.value == "")) {
                flash2.innerHTML = "Login credentials missing field(s)"
                bt.disabled = true;
            } else if (usr.indexOf('@') > -1) {
                flash1.innerHTML = "Login with your username, not your email"
                bt.disabled = true;
            } else {
                flash1.innerHTML = ""
                flash2.innerHTML = ""
                bt.disabled = false;
            }
        }

